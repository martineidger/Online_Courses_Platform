<Window x:Class="OnlineCoursesPlatform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineCoursesPlatform"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:OnlineCoursesPlatform.ViewModels"
        Title="MainWindow" Height="650" Width="1000" 
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Background="Transparent"
        MouseLeftButtonDown="DragMe">

    <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="0.3">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Border>
</Window>
